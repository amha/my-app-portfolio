<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Material.Light.DarkActionBar">

        <!-- Brand colors  -->
        <item name="android:colorPrimary">#00E5FF</item>
        <item name="android:colorPrimaryDark">#2C3E50</item>

        <!-- Buttons -->
        <item name="android:button">@style/RedButtons</item>
        <!--<item name="android:button">@style/OtherButton</item>-->
    </style>

    <style name="RedButtons" parent="android:Widget.Material.Button.Borderless.Colored">
        <item name="android:width">200dp</item>
        <item name="android:background">#E74C3C</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textColor">#fff</item>

    </style>

    <style name="OtherButton" parent="android:Widget.Material.Button.Borderless">
        <item name="android:width">200dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:background">#009688</item>
    </style>
</resources>
