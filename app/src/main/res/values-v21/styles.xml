<?xml version="1.0" encoding="utf-8"?>
<resources>


    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Material.Light.DarkActionBar">

        <!-- Brand colors  -->
        <item name="android:colorPrimary">@color/dark_blue</item>
        <item name="android:colorPrimaryDark">@color/dark_blue</item>

    </style>

    <style name="RedButtons" parent="android:Widget.Material.Button">
        <item name="android:width">@dimen/button_width</item>
        <item name="android:background">@color/red</item>
        <item name="android:layout_marginTop">@dimen/button_margin_top</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="OtherButton" parent="android:Widget.Material.Button">
        <item name="android:width">@dimen/button_width</item>
        <item name="android:layout_marginTop">@dimen/button_margin_top</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/light_green</item>
    </style>

    <style name="ScreenTitle" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:color">@color/dark_blue</item>
    </style>

</resources>
